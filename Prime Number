// Prime numbers.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
#include <cmath>
using namespace std;



// The purpost of this program is to check if a number is prime or not.

int main()
{
    int i;
    cout << "Please enter a number to check if it is prime: " << endl;
    cin >> i;
    cout << endl;
    
    int isPrime = 1; // Assume number is prime
    for (int k = 2; k <= sqrt(i); k++) {
        if (i % k == 0) {
            cout << i << " is not a prime number." << endl;
            isPrime = 0;
            break;
        }
    }
    if (isPrime && i > 1) {
        cout << i << " is a prime number." << endl;
    }
}

// Run program: Ctrl + F5 or Debug > Start Without Debugging menu
// Debug program: F5 or Debug > Start Debugging menu

